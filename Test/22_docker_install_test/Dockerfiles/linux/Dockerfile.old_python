# CASSIA Installation Test: Old Python Environment
# Tests: User with R + Python 3.8 (incompatible version)
# Expected: FAIL with clear "Python 3.9+ required" error message

FROM rocker/r-ver:4.4.0

LABEL maintainer="CASSIA Team"
LABEL description="R with Python 3.8 (incompatible - too old)"
LABEL scenario="old_python"

# Install R dependencies and OLD Python 3.8
RUN apt-get update && apt-get install -y --no-install-recommends \
    libcurl4-openssl-dev \
    libssl-dev \
    libxml2-dev \
    libfontconfig1-dev \
    libfreetype6-dev \
    libpng-dev \
    libtiff5-dev \
    libjpeg-dev \
    libharfbuzz-dev \
    libfribidi-dev \
    git \
    software-properties-common \
    && add-apt-repository -y ppa:deadsnakes/ppa \
    && apt-get update \
    && apt-get install -y --no-install-recommends \
    python3.8 \
    python3.8-venv \
    python3.8-distutils \
    && rm -rf /var/lib/apt/lists/*

# Set Python 3.8 as default (this is the incompatible version)
RUN update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.8 1

# Verify Python version is 3.8
RUN python3 --version

# Create test directory
WORKDIR /test

# Copy the test script
COPY scripts/install_test.R /test/

# Default command
CMD ["Rscript", "/test/install_test.R"]
